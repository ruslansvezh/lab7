#include <iostream>
#include <math.h>
using namespace std;
int main()
{
	setlocale(0, "");
	int a,b,c;
	cout << "Введите стороны треугольника: " << endl;
	cin >> a>>b>>c;
	if (a + b > c && c + b > a && a + c > b)
		cout << "Треугольник существует!";
	else
		cout << "Треугольник c данными сторонами не существует!";
}   
